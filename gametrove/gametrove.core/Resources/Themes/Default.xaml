<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Color definitions -->
    <Color x:Key="NavigationPrimary">#2499FF</Color>
    <Color x:Key="NavigationSecondary">#124C80</Color>
    <Color x:Key="Foreground">White</Color>
    <Color x:Key="Background">#1D7ACC</Color>
    <Color x:Key="ButtonPrimary">#70BCFF</Color>
    <Color x:Key="ButtonSecondary">#385E80</Color>

    <!-- Shell defaults -->
    <Style x:Key="BaseStyle" TargetType="Element">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource NavigationPrimary}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource Foreground}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource Foreground}" />
        <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
        <Setter Property="Shell.UnselectedColor" Value="#95FFFFFF" />
    </Style>

    <!-- Custom styles -->
    <Style TargetType="ShellItem" BasedOn="{StaticResource BaseStyle}" />
    <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}" />

    <Style x:Key="HeaderLabel" TargetType="Label" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="TextColor" Value="{StaticResource NavigationSecondary}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="Padding" Value="5,0" />
    </Style>

    <Style x:Key="FormInput" TargetType="StackLayout">
        <Setter Property="Padding" Value="0, 15" />
        <Setter Property="Margin" Value="5, 10" />
    </Style>
    <Style TargetType="Entry" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="Large"></Setter>
    </Style>
    <Style TargetType="Editor" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="FontSize" Value="Large"></Setter>
        <Setter Property="AutoSize" Value="1"></Setter>
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonSecondary}"></Setter>
    </Style>
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonPrimary}"></Setter>
    </Style>
</ResourceDictionary>